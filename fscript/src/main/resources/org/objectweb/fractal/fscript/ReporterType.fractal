<!DOCTYPE definition PUBLIC "-//objectweb.org//DTD Fractal ADL 2.0//EN"
          "classpath://org/objectweb/fractal/adl/xml/standard.dtd">
<!-- This file defines a reusable base type that components can
     extend. It defines client interfaces to depend on a
     DiagnosticListener and a Logger, which many components in FScript
     depend on. -->
<definition name="org.objectweb.fractal.fscript.ReporterType">

  <interface name="diagnostics"
             role="client"
             signature="org.objectweb.fractal.fscript.diagnostics.DiagnosticListener" />

  <interface name="logger"
             role="client"
             signature="org.objectweb.util.monolog.api.Logger" />

</definition>
